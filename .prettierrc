{
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": false,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"trailingComma": "all",
	"printWidth": 80,
	"tabWidth": 2,
	"useTabs": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"overrides": [
		{ "files": [".eslint"], "options": { "trailingComma": "none" } }
	],
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": [
		"^dotenv(.*)$",
		"<THIRD_PARTY_MODULES>",
		"^@/(api|app|components|stores)/(.*)$",
		"^@/(assets|consts|helpers|types)/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
